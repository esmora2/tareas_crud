<% content_for :title, "Editar Tarea" %>

<div class="container mx-auto p-6">
  <!-- Título dinámico para editar tarea -->
  <h1 class="text-3xl font-bold text-gray-800 mb-6"><%= @tarea.persisted? ? "Editar Tarea" : "Nueva Tarea" %></h1>

  <!-- Renderizado del formulario -->
  <%= render "form", tarea: @tarea %>

  <br>

  <!-- Botones de acción -->
  <div class="mt-4 text-center space-x-2">
    <%= link_to "Mostrar esta tarea", @tarea, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 border-2 border-blue-600" %>
    <%= link_to "Volver a tareas", tareas_path, class: "inline-block bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 border-2 border-gray-500" %>
  </div>
</div>
